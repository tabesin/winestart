\"Default\"=\"$current_res\"
[HKEY_CURRENT_USER\Control Panel\Colors]
\"Background\"=\"$desktop_color\""
		printf "REGEDIT4\n\n$starter_reg\n" > $winestarter_reg
#		$wine_bin regedit $winestarter_reg
		if [[ -s $winestarter_reg ]]; then
