	if [[ $(cat $default_reg| egrep -c "\"Desktop\"=\"Default\"") -eq 0 ]]; then
		## find primary display res.
		current_res=$(xrandr --current| fgrep "*"| awk '{print $1}')
		desktop_color='0 0 0'
		starter_reg="[HKEY_CURRENT_USER\Software\Wine\\\\Explorer]
\"Desktop\"=\"Default\"
